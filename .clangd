# https://clangd.llvm.org/

CompileFlags:
  Add:
    - "-ferror-limit=0"
  CompilationDatabase: .vscode

Style:
  FullyQualifiedNamespaces:
    - std

InlayHints:
  Enabled: Yes
  BlockEnd: Yes
  Designators: Yes
  ParameterNames: Yes
  DeducedTypes: Yes
  TypeNameLimit: 24

Hover:
  ShowAKA: No

Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: None

---

# Ignore packages that installed by vcpkg
If:
  PathMatch: (out|build).*
Diagnostics:
  Suppress: '*'
  UnusedIncludes: None
  MissingIncludes: None
