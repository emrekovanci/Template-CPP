{
    // [Files]
    "files.associations": {
        "*.clang-tidy": "yaml",
        "*.clang-format": "yaml",
        "*.clangd": "yaml",
        "*.codespellrc": "ini",
    },
    "files.exclude": {
        ".cache": true,
        "**/.vs": true,
        "**/.idea": true,
        "**/build": true,
        "**/out": true,
    },
    "files.readonlyInclude": {
        "out/**": true,
        "build/**": true,
    },

    // [Editor]
    "[cpp]": {
        "editor.formatOnSave": true,
    },

    // [CMake]
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.saveBeforeBuild": true,
    "cmake.clearOutputBeforeBuild": true,
    "cmake.copyCompileCommands": "${workspaceFolder}/compile_commands.json",
    "cmake.options.statusBarVisibility": "hidden",
    // to disable showing the same problem twice (clangd & cmake)
    "cmake.parseBuildDiagnostics": false,
    "cmake.pinnedCommands": [
        "cmake.selectConfigurePreset",
        "cmake.build",
        "cmake.stop",
        "cmake.install",
        "cmake.ctest",
        "cmake.cpack",
        "cmake.workflow",
        "cmake.clean",
        "cmake.cleanRebuild",
    ],

    // [C_Cpp] Disable formatting and intellisense engine in Microsoft C/C++ extension (provides debugging)
    "C_Cpp.autocomplete": "disabled",
    "C_Cpp.formatting": "disabled",
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.enhancedColorization": "disabled",
    "C_Cpp.hover": "disabled",

    // [Clangd]
    "clangd.restartAfterCrash": true,
    "clangd.detectExtensionConflicts": true,
    "clangd.onConfigChanged": "restart",
    "clangd.arguments": [
        "--completion-style=detailed", // show all function overloads. Otherwise it combines like func(...)
        "--header-insertion-decorators=true",
        "--pretty",
        // "--pch-storage=memory",
    ],
}
